<% if notice %>
  <p style="color: green"><%= notice %></p>
<% end %>

<div class="d-flex justify-content-between">
  <h1>Orders</h1>
  <div>
    <%= link_to "New order", new_order_path, class: 'btn btn-primary btn-lg' %>
  </div>
</div>

<div id="orders">
    <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Public ID</th>
        <th scope="col">Customer</th>
        <th scope="col">Created at</th>
        <th scope="col">Updated at</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <th scope="row"><%= order.id %></th>
          <td scope="row"><%= order.public_id %></td>
          <td scope="row"><%= order.customer.full_name %></td>
          <td scope="row"><%= l order.customer.created_at %></td>
          <td scope="row"><%= l order.customer.updated_at %></td>
          <td scope="row"><%= link_to "Show this order", order %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= pagy_bootstrap_nav(@pagy).html_safe %>
